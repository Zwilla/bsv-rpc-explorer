# The active coin: BSV
BSVEXP_COIN=BSV

# Host/Port to bind to
BSVEXP_HOST=127.0.0.1
BSVEXP_PORT=3002
BSVEXP_ALLOW_TERMINAL=true
BSVEXP_ALLOW_RPCBROWSER=true

# Bitcoin RPC Credentials (URI -OR- HOST/PORT/USER/PASS)
#BSVEXP_BITCOIND_URI=bitcoin://rpcusername:rpcpassword@127.0.0.1:8332
BSVEXP_BITCOIND_HOST=localhost
BSVEXP_BITCOIND_PORT=8332
BSVEXP_BITCOIND_USER=rpc_username
BSVEXP_BITCOIND_PASS=rpc_password
BSVEXP_BITCOIND_COOKIE=/home/bitcoin/bitcoind/.cookie

# Optional ElectrumX Servers, used to display address transaction histories
# Ref: https://uasf.saltylemon.org/electrum
#BSVEXP_ELECTRUMX_SERVERS=tcp://sv1.hsmiths.com:50001,tcp://127.0.0.1:50001,...

# Optional InfluxDB Credentials (URI -OR- HOST/PORT/DBNAME/USER/PASS)
